FROM nvidia/cuda:11.7.0-cudnn8-devel-ubuntu20.04
RUN apt-get update && apt-get install -y python3 python3-pip ffmpeg git wget ca-certificates
WORKDIR /app
COPY . /app
RUN pip3 install -r requirements.txt
ENV CELERY_BROKER_URL=redis://redis:6379/0
ENV BLENDER_BIN=/opt/blender/blender
CMD ["bash","-lc","celery -A tasks.v2a_orchestrator worker --loglevel=info -Q v2a_orch"]
